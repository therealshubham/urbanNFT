<link rel="stylesheet" href="style-login.css">

<div class="title">
    Register to MINT your NFTs...!
</div>

<div class="login-wrapper">
    <div class="login-form">
        <form action="/register" method="post" class="form">
            <div class="error" style="display: <%= error.display %> ;"> <%= error.data %>  </div>
            
            <label for="username">What's your e-mail?</label>
            <input type="email" name="username" id="username" required>
            
            <label for="name">Your full name?</label>
            <input type="text" name="name" id="name" required>
            
            <label for="password">Your super secret password.</label>
            <input type="password" name="password" id="password" required>

            <label for="cpassword">Confirm the password?</label>
            <input type="password" name="cpassword" id="cpassword" required>
            
            <input type="submit" value="CREATE ACCOUNT">
        </form>
    </div>
</div>
